	<property name="url" value="jdbc:mariadb://localhost:3307/test"></property>
	<property name="username" value="root"></property>
	<property name="password" value="root"></property>
	</bean>

	<bean id="employeeJdbcTemplate" class="com.app.org.EmployeeJdbcTemplate">
	<property name="dataSource" ref="dataSource"></property>
	</bean>
	<bean id="departmentJdbcTemplate" class="com.app.org.DepartmentJdbcTemplate">
	<property name="dataSource" ref="dataSource"></property>
	</bean>
